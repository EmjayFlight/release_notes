      </div><!-- closed --->
      </div><!-- closed --->
      <div class="col-md-4">
        <div class="field">
        <%= f.label :workarounds %><br>
        <%= f.text_area :workarounds, cols: "25", rows: "5"  %>
      </div><!-- closed --->
      
      <div class="field">
        <%= f.submit "Add New Defect",  class: "btn btn-primary" %>
      </div><!-- closed --->
      </div><!-- closed --->
      <% end %>
  </div><!-- closed --->
</div><!-- closed --->