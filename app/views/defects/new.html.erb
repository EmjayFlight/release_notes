<div class="container-fluid">
  <%= form_for @defect do |f| %>
	  <h1>Add New Defect</h1>
	<div class="row">
		<div class="col-md-4"><!-- closed --->
	
      <div class="field">
        <%= f.label :defect_no, "Defect Number" %><br>
        <%= f.text_field :defect_no %>
      </div><!-- closed --->
      <div class="field">
        <%= f.label :rtc, "RTC Number" %><br>
        <%= f.text_field :rtc %>
      </div><!-- closed --->
      <div class="field">
        <%= f.label :qc, "Quality Center Info" %><br>
        <%= f.text_field :qc %>
      </div><!-- closed --->
      <div class="field">
        <%= f.label :config, "Configuration" %><br>
        <%= f.text_field :config %>
      </div><!-- closed --->
    </div><!-- closed --->
    <div class="col-md-4"><!-- closed --->
      <div class="field">
        <%= f.label :data_mapping_def, "Data Mapping Needed?" %>
        <%= f.check_box :data_mapping_def %>
